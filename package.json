{
  "name": "mu",
  "version": "0.1.0",
  "description": "simplify the declaration and administration of the AWS resources necessary to support microservices.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stelligent/mutato.git"
  },
  "bin": {
    "mu": "bin/mu.js"
  },
  "scripts": {
    "build": "npm-run-all lint:check compile",
    "watch": "tsc -w",
    "compile": "tsc",
    "test": "nyc mocha test/**/*.test.ts",
    "lint:check": "prettier --check {lib,bin,test}/**/*.ts",
    "lint:write": "prettier --check --write {lib,bin,test}/**/*.ts",
    "clean": "git clean -xdff -e node_modules",
    "docs:check": "eslint . --ext .ts",
    "docs:generate": "typedoc",
    "docs": "npm-run-all docs:*"
  },
  "devDependencies": {
    "@aws-cdk/assert": "^1.22.0",
    "@types/chai": "^4.2.8",
    "@types/chai-as-promised": "^7.1.2",
    "@types/mocha": "^7.0.1",
    "@types/node": "13.7.0",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "choma": "^1.2.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-jsdoc": "^21.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "mocha": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.0",
    "prettier": "^1.19.1",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.6.2",
    "typedoc": "^0.16.9",
    "typescript": "~3.7.5"
  },
  "dependencies": {
    "@aws-cdk/core": "^1.22.0",
    "@types/bluebird": "^3.5.29",
    "@types/debug": "^4.1.5",
    "@types/js-yaml": "^3.12.2",
    "@types/lodash": "^4.14.149",
    "@types/nunjucks": "^3.1.3",
    "ajv": "^6.11.0",
    "aws-cdk": "^1.22.0",
    "bluebird": "^3.7.2",
    "debug": "^4.1.1",
    "js-yaml": "^3.13.1",
    "lodash": "^4.17.15",
    "nunjucks": "^3.2.0"
  },
  "mocha": {
    "bail": true,
    "fullTrace": true,
    "recursive": true,
    "inlineDiffs": true,
    "require": [
      "choma",
      "ts-node/register",
      "source-map-support/register"
    ]
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "coverage",
      "test",
      "bin"
    ],
    "reporter": [
      "html",
      "text-summary"
    ],
    "all": true
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "singleQuote": true
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint",
      "prettier",
      "jsdoc"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:jsdoc/recommended",
      "prettier"
    ],
    "rules": {
      "jsdoc/require-jsdoc": [
        "error",
        {
          "publicOnly": false,
          "require": {
            "ClassDeclaration": true,
            "MethodDefinition": true
          }
        }
      ],
      "jsdoc/check-examples": [
        "error",
        {
          "baseConfig": {
            "parser": "@typescript-eslint/parser"
          }
        }
      ],
      "prettier/prettier": "error",
      "@typescript-eslint/camelcase": "off"
    },
    "settings": {
      "jsdoc": {
        "mode": "typescript"
      }
    }
  }
}
