{
  "type": "object",
  "required": ["mu"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Mu version targeted by the mu.yml file. This is a semantic version string.",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$",
      "default": "latest version of Mu, user is executing"
    },
    "mu": {
      "type": "object",
      "description": "Collection of Mu constructs.",
      "patternProperties": {
        ".*": {
          "$ref": "#/definitions/mu_construct"
        }
      }
    }
  },
  "definitions": {
    "mu_construct": {
      "type": "object",
      "description": "Mu construct specification.",
      "properties": {
        "name": {
          "type": "string",
          "description": "Optional name of the Mu construct."
        }
      },
      "additionalProperties": true
    }
  }
}
