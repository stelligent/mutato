{
  "type": "object",
  "required": ["mu"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Mu version targeted by the mu.yml file. This is a semantic version string.",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$",
      "default": "latest version of Mu, user is executing"
    },
    "mu": {
      "type": "object",
      "description": "Collection of Mu constructs.",
      "patternProperties": {
        ".*": {
          "$ref": "#/definitions/mu_construct"
        }
      },
      "properties": {
        "database": {
          "type": "object",
          "$ref": "#/definitions/database_construct"
        }
      }
    }
  },
  "definitions": {
    "mu_construct": {
      "type": "object",
      "description": "Mu construct specification.",
      "properties": {
        "name": {
          "type": "string",
          "description": "Optional name of the Mu construct."
        }
      },
      "additionalProperties": true
    },
    "database_construct": {
      "type": "object",
      "description": "Provides an AWS database",
      "required": ["provider"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Optional name for database construct"
        },
        "provider": {
          "type": "string",
          "description": "Required name for database service: RDS, DynamoDB, etc",
          "enum": ["rds", "dynamodb"]
        },
        "engine": {
          "type": "string",
          "description": "Required name for database engine: MySQL, PostgreSQL, MSSQL, etc",
          "enum": ["mysql", "postgres", "sqlserver"]
        }
      }
    }
  }
}
